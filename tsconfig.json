{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "es2017", "dom"],
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"types": ["node", "reflect-metadata", "jest"],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}